<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="normal_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="normal_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="small_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="big_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_big</item>
    </style>

</resources>
